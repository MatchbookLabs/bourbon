{{#freestyle-section name='Components' as |section|}}
  {{#section.subsection name='buttons'}}
    {{partial 'components/buttons/all-buttons'}}
  {{/section.subsection}}

  {{#section.subsection name='modals'}}
    {{partial 'components/modals'}}
  {{/section.subsection}}

  {{#section.subsection name='tooltip'}}
    {{partial 'components/tooltip'}}
  {{/section.subsection}}


  {{#section.subsection name='text field'}}
    {{#freestyle-collection title='All text fields' defaultKey='all' inline=false as |collection|}}
      {{#collection.variant key='default'}}

        {{#freestyle-usage 'text-fields' title='default'}}
          {{bourbon-text-field placeholder="i am the placholder" onFocusOutOrEnter=(action "textFieldClick")}}
        {{/freestyle-usage}}

        {{#freestyle-note 'text-fields--notes'}}
          <h4>Form field options</h4>
          <ul>
            <li>placeholder: (optional)</li>
            <li>value: (optional)</li>
            <li>various actions:
              <ul>
                <li>actionOnFocusIn: action to be taken when focused into the text field</li>
                <li>actionOnFocusOut: action to be taken when focused out of the text field</li>
                <li>actionOnEnter: action to be taken when pressing enter in the text field</li>
                <li>onFocusOutOrEnter: action to be taken when focused out of or when pressing enter in the text field</li>
              </ul>
            </li>
            <li>autofocus: (optional)</li>
            <li>value</li>
          </ul>
        {{/freestyle-note}}
      {{/collection.variant}}


      {{#collection.variant key='actionOnFocusIn'}}

        {{#freestyle-usage 'text-fields-focus-in' title='actionOnFocusIn'}}
          {{bourbon-text-field placeholder="i am the placholder" autofocus=true actionOnEnter=(action "textFieldEnterAction")}}
        {{/freestyle-usage}}
        {{#freestyle-note 'text-fields-focus-in--notes'}}
        {{/freestyle-note}}
      {{/collection.variant}}
    {{/freestyle-collection}}
  {{/section.subsection}}
{{/freestyle-section}}
