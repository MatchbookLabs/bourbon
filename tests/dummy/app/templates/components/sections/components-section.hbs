{{#freestyle-section name='Components' as |section|}}
  {{#freestyle-subsection name='Buttons' section=section}}
    {{partial 'components/buttons/all-buttons'}}
  {{/freestyle-subsection}}


  {{#freestyle-subsection name='Primary Button States' section=section}}
    {{partial 'components/buttons/primary-button-states'}}
  {{/freestyle-subsection}}

  {{#freestyle-subsection name='Secondary Button States' section=section}}
    {{partial 'components/buttons/secondary-button-states'}}
  {{/freestyle-subsection}}


  {{#freestyle-subsection name='modal' section=section}}

    {{#freestyle-usage 'bourbon-scrollable-modal' title='scrollable modal' usageTitle='Usage'}}
      {{#if showScrollableModalState}}
        {{bourbon-modal 
          scrollable=true
          cancelAction=(action 'closeScrollableModal')
          title='modal title' 
          content='test-scrollable-modal-content'
          primaryButtonTitle='primary'
          primaryButtonAction='alert'
          secondaryButtonTitle='secondary'
          secondaryButtonAction='alert'
          linkTitle='alternative resource link'
          linkHref='#'
        }}
      {{/if}}
    {{/freestyle-usage}}
    <div class='FreestyleUsage-rendered'>
      {{bourbon-button title='show scrollable modal' class='bourbon-primary-button' action=(action 'showScrollableModal')}}
    </div>

    {{#freestyle-usage 'bourbon-modal' title='regular modal' usageTitle='Usage'}}
      {{#if showModalState}}
        {{bourbon-modal 
          scrollable=false
          cancelAction=(action 'closeModal')
          title='modal title' 
          content='test-modal-content'
          primaryButtonTitle='primary'
          primaryButtonAction='alert'
          linkTitle='alternative resource link' 
          linkHref='#'
        }}
      {{/if}}
    {{/freestyle-usage}}
    <div class='FreestyleUsage-rendered'>
      {{bourbon-button title='show regular modal' class='bourbon-primary-button' action=(action 'showModal')}}
    </div>

    {{#freestyle-annotation}}
    <h3>Note on usage</h3>
    <p>
      For the content section, use the following classes in your content partial.
    </p>
    <ul>
      <li>bourbon-modal__description</li>
      <li>bourbon-modal__content-area</li>
    </ul>
    {{/freestyle-annotation}}
  {{/freestyle-subsection}}

{{/freestyle-section}}
