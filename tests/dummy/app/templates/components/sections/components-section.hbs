{{#freestyle-section name='Components' as |section|}}
  {{#section.subsection name='Buttons'}}
    {{partial 'components/buttons/all-buttons'}}
  {{/section.subsection}}


  {{#section.subsection name='Primary Button States'}}
    {{partial 'components/buttons/primary-button-states'}}
  {{/section.subsection}}

  {{#section.subsection name='Secondary Button States'}}
    {{partial 'components/buttons/secondary-button-states'}}
  {{/section.subsection}}

  {{#section.subsection name='modal'}}
    {{#freestyle-usage 'bourbon-scrollable-modal' title='scrollable modal' usageTitle='Usage'}}
      {{bourbon-modal}}
    {{/freestyle-usage}}
    <div class='FreestyleUsage-rendered'>
      {{bourbon-button title='show scrollable modal' class='bourbon-primary-button' action=(action 'showModal' scrollableModalParams)}}
    </div>

    {{#freestyle-note 'bourbon-scrollable-modal--notes'}}
      ###### You will need to add the paramaters for each modal to your controller.  See example below.

      ```
        this.set('scrollableModalParams', {
          scrollable: true,
          cancelAction: 'controllerCloseAction',
          title: 'scrolling modal title',
          content: 'test-scrollable-modal-content',
          primaryButtonTitle: 'primary',
          primaryButtonAction: 'alert',
          secondaryButtonTitle: 'secondary',
          secondaryButtonAction: 'alert',
          linkTitle: 'alternative resource link',
          linkHref: '#'
        })
      ```

    {{/freestyle-note}}
  
    {{#freestyle-usage 'bourbon-modal' title='regular modal' usageTitle='Usage'}}
      {{bourbon-modal}}
    {{/freestyle-usage}}
    <div class='FreestyleUsage-rendered'>
      {{bourbon-button title='show regular modal' class='bourbon-primary-button' action=(action 'showModal' modalParams)}}
    </div>

    {{#freestyle-annotation}}
      <h3>Note on usage</h3>
      <p>
        For the content section, use the following classes in your content partial.
      </p>
      <ul>
        <li>bourbon-modal__description</li>
        <li>bourbon-modal__content-area</li>
      </ul>
    {{/freestyle-annotation}}
  {{/section.subsection}}

{{/freestyle-section}}
