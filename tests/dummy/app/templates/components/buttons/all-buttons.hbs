{{#freestyle-collection title='All buttons' defaultKey='all' inline=false as |collection|}}

  {{partial 'components/buttons/primary-button-states'}}
  {{partial 'components/buttons/rounded-button-states'}}
  {{partial 'components/buttons/secondary-button-states'}}

  {{#collection.variant key='icon'}}
    {{#freestyle-usage 'icon-only-button' title='Icon Button' usageTitle='Usage'}}
      {{bourbon-button icon='edit-button' action=(action 'buttonClick')}}
    {{/freestyle-usage}}

    {{#freestyle-note 'icon-only-button--notes'}}
      - requires icon attribute
      - all icons should live in bourbon
      <br>
    {{/freestyle-note}}

    {{#freestyle-usage 'icon-button' title='loading' usageTitle='Usage'}}
      {{bourbon-button icon='loading' class='bourbon-disable-button bourbon-primary-button'}}
    {{/freestyle-usage}}

    {{#freestyle-note 'icon-button--notes'}}
      - requires icon attribute and class for button ie. bourbon-primary-button
      <br>
    {{/freestyle-note}}

    {{#freestyle-usage 'icon-text-button' title='Icon Text Button' usageTitle='Usage'}}
      {{bourbon-button icon='edit-button' title='edit me now' class='bourbon-secondary-button' action=(action 'buttonClick')}}
    {{/freestyle-usage}}
    {{#freestyle-note 'icon-text-button--notes'}}
      - requires icon, title and class attributes
      <br>
    {{/freestyle-note}}

  {{/collection.variant}}

{{/freestyle-collection}}
