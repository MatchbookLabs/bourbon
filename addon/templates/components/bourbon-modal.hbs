{{#if modalService.showModalState}}
  {{bourbon-modal-overlay closeModal=(action 'closeBourbonModal')}}
  <aside class="bourbon-modal {{if modalService.scrollable 'bourbon-modal--scrollable'}} {{if modalService.wideModal 'bourbon-modal--large'}} {{if modalService.confirmationModal 'bourbon-modal--confirmation'}}">
    <div class="bourbon-modal__header">
      {{#if modalService.title}}
        <header class="bourbon-modal__title">{{modalService.title}}</header>
      {{/if}}
      {{bourbon-button icon='close-button' class='bourbon-modal__close-button' action=(action 'closeBourbonModal') aria-label='Close'}}
    </div>

    {{#if modalService.content}}
      {{bourbon-modal-content contentPartial=modalService.content componentController=modalService.context}}
    {{else}}
      {{bourbon-modal-content textContent=modalService.textContent}}
    {{/if}}

    <div class="bourbon-modal__footer">
      {{#if modalService.linkTitle}}
        <a class="bourbon-modal__link" href={{modalService.linkHref}}>{{modalService.linkTitle}}</a>
      {{/if}}
      <div class="bourbon-modal__button-wrapper">
        {{#if modalService.secondaryButtonTitle}} 
          {{bourbon-button title=modalService.secondaryButtonTitle class='bourbon-secondary-button bourbon-mr-3' action=(action modalService.secondaryButtonAction)}} 
        {{/if}} 
        {{#if modalService.primaryButtonTitle}} 
          {{bourbon-button title=modalService.primaryButtonTitle class='bourbon-primary-button' action=(action modalService.primaryButtonAction)}} 
        {{/if}}
      </div>
    </div>
  </aside>
{{/if}}
