<div class="bourbon-search-select-field__input-container">
  {{bourbon-text-field placeholder=prompt value=inputValue actionOnFocusIn=(action 'showContent') actionOnFocusOut=(action 'hideContent')}}
</div>

<div class="bourbon-search-select-field__search-container">
  {{bourbon-select-field content=searchList prompt=prompt fullWidth=true showList=showDropdown searchTerm=inputValue label=label value=currentValue optionLabelPath=optionLabelPath optionValuePath=optionValuePath optionEnabledPath=optionEnabledPath selectFieldContext=selectFieldContext}}
</div>
