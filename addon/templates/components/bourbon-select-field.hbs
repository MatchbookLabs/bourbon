<select name="BourbonSelectField" class="BourbonSelectField btw-hidden" focusrole="listbox">
  {{#if hasPrompt}}
    <option value={{prompt}}>{{prompt}}</option>
  {{/if}}
  {{#if groupedContent}}
    {{#each content as |group|}}
      <optgroup label={{group.label}}>
        {{#each group.items as |option|}}
          {{bourbon-select-field-option tagName="option" content=option selection=selection labelPath=optionLabelPath valuePath=optionValuePath enabledPath=optionEnabledPath target=target role="listitem"}}
        {{/each}}
      </optgroup>
    {{/each}}

  {{else}}
    {{#each content as |option|}}
      {{bourbon-select-field-option tagName="option" content=option selection=selection labelPath=optionLabelPath valuePath=optionValuePath enabledPath=optionEnabledPath target=target role="listitem"}}
    {{/each}}
  {{/if}}
</select>

<div class="BourbonSelectField-selected" tabindex="0">{{label}}</div>
<div class="BourbonSelectField-menu {{if showList 'BourbonSelect--focus btw-block'}}">
  {{#if groupedContent}}
    {{#each content as |group index|}}
      <div class="BourbonSelectField-optionGroup" index={{index}}>
        <div class="BourbonSelectField-optionGroupName">{{group.label}}</div>
        {{#each group.items as |option index|}}
          {{bourbon-select-field-option index=index tagName="div" content=option selection=selection labelPath=optionLabelPath valuePath=optionValuePath enabledPath=optionEnabledPath disabled=option.disabled target=target role="listitem"}}
        {{/each}}
      </div>

    {{/each}}

  {{else}}
    {{#each content as |option index|}}
      {{bourbon-select-field-option index=index tagName="div" content=option selection=selection labelPath=optionLabelPath valuePath=optionValuePath enabledPath=optionEnabledPath disabled=option.disabled target=target role="listitem"}}
    {{/each}}
  {{/if}}
</div>
